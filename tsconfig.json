{
    "compilerOptions": {
        "rootDir": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict":true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "lib": ["es6","es2015","es2017","esnext"],
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "composite": true,
        "outDir":"./lib",
        "resolveJsonModule": true,
    },
    "include": ["./src/**/*","./__tests__/**/*","./package.json"],
    "exclude": [
        "./lib",
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
}
